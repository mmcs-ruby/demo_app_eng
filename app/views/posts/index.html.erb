<h1>Feed</h1>
<ul>
  <%- @posts.each do |post| %>
    <li>
      <%= link_to post.title,
                  controller: 'posts',
                  action: 'show',
                  id: post.id %>
    </li>
    <%= link_to 'Edit', "/posts/#{post.id}/edit" %>
    <%= form_for post, method: :delete do |f|  %>
      <%= f.button('Remove') %>
    <% end %>
  <% end %>
</ul>

<%= link_to 'New Post',
            controller: 'posts',
            action: 'new'%>
