<h2> New Post</h2>

<%= form_for Post.new, remote: true do |f| %>
  <div class="form-container">
    <div>
      <%= f.label :title, class: 'custom-label' %>
      <%= f.text_field :title %>
    </div>

    <div>
      <%= f.label :text, class: 'custom-label' %>
      <%= f.text_area :text %>
    </div>

    <div>
      <%= f.submit %>
    </div>

  </div>

<% end %>